{% include './Site/includes/menu.twig' %}
{% block conteudo %}
<section id="home" class="hero-section dtr-py-8 ">
   {% for escola in escolar %}
		<div class="container">
    <div class="main-body">
          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    <img src="{{asset('ficheiros/escolas/logotipo')}}/{{ escola.logotipo}}" alt="Admin" class="rounded-circle" width="150">
                    <div class="mt-3">
                      <h5>{{ escola.nome }}</h5>

                    </div>
                  </div>
                </div>
              </div>

            </div>
            <div class="col-md-8">
              <div class="card mb-3">
                <div class="card-body">

                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{ escola.email }}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Telefone</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      (244) {{ escola.telefone }}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Endereço</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{ escola.localizacao }}
                    </div>
                  </div>
                  <hr>
                  <div class="row">

                    <div class="col-sm-12 text-secondary">
                     <h6 >Sobre à Escola</h6> <p class="text-justify">{{ escola.sobre }}</p>
                    </div>
                  </div>
            </div>
          </div>

        </div>
    </div>
	</div>
  {% endfor %}

</div>


<!--Fim do Sobre a Escola-->


<div class="container">
	<h4 class="mt-5">Historial</h4>
	<div class="row">

                    <div class="col-sm-12 text-secondary">
                     <p class="text-justify">{{ historial.historial }}</p>
                    </div>
                  </div>

</div>
<!--Fim do Sobre o Historial-->


<div class="container">


	<h4 class="mt-5">Cursos Leccionados</h4>
    <div class="row">
  <div class="col-4">
    <div class="list-group" id="list-tab" role="tablist">
      {% for curso in cursos %}
      <a class="list-group-item list-group-item-action   {% if loop.index == 1 %}  active {% endif %} " id="list-{{curso.id}}-list" data-toggle="list" href="#list-{{curso.id}}" role="tab" aria-controls="{{curso.id}}">{{ curso.nome }}</a>
      {% endfor %}

    </div>
  </div>
  <div class="col-8">
    <div class="tab-content" id="nav-tabContent">
     {% for curso in cursos %}
      <div class="tab-pane fade {% if loop.index == 1 %} show active {% endif %} " id="list-{{curso.id}}" role="tabpanel" aria-labelledby="list-{{curso.id}}-list">
        <h5>Principais Disciplinas</h5>
        <p>{{ curso.principais_disciplinas }}</p>
        <h5>Perfil de Saída</h5>
        <p>{{ curso.perfil_de_saida }}</p>
      </div>
      {% endfor %}
    </div>
  </div>
</div>
</div>


<!--Fim de Cursos Leccionados-->


<div class="container">
	<h4 class="mt-5">Arquitectura</h4>
  <ul class="nav nav-pills nav-fill col-sm-12" style="cursor: pointer;">
  {% for arquitectura in arquitecturas %}
  <li class="nav-item col-sm-3 mt-2"><a class="nav-link active ml-2" >{{ arquitectura.arquitectura }}</a></li>
  {% endfor %}
</ul>
</div>

<!--Fim de Arquictetura-->

<div class="container">
	<h4 class="mt-5">Fotos</h4>
  <div class="card-deck">
  {% for foto in fotos %}
  <div class="card ">
    <a href="{{asset('ficheiros/escolas/fotos')}}/{{ foto.foto }}"><img  style="height:250px" class="card-img-top" src="{{asset('ficheiros/escolas/fotos')}}/{{ foto.foto }}"></a>
  </div>
  {% endfor %}


</div>
</div>
</div>


<!--Fim de Arquictetura-->


</section>
{% endblock %}

{% include './Site/includes/rodape.twig' %}

















