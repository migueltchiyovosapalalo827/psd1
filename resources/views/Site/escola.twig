{% include './Site/includes/menu.twig' %}

{% block conteudo %}
<section id="home" class="hero-section dtr-py-8 ">
   {% for escola in escolar %}
<div class="container">
    <div class="main-body">
          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    <img src="{{asset('ficheiros/escolas/logotipo')}}/{{ escola.logotipo}}" alt="Admin" class="rounded-circle" width="150">
                    <div class="mt-3">
                      <h5>{{ escola.nome }}</h5>

                    </div>
                  </div>
                </div>
              </div>

            </div>
            <div class="col-md-8">
              <div class="card mb-3">
                <div class="card-body">

                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{ escola.email }}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Telefone</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      (244) {{ escola.telefone }}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Endereço</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{ escola.localizacao }}
                    </div>
                  </div>
                  <hr>
                  <div class="row">

                    <div class="col-sm-12 text-secondary">
                     <h6 >Sobre à Escola</h6> <p class="text-justify">{{ escola.sobre }}</p>
                    </div>
                  </div>
            </div>
          </div>

        </div>
    </div>
	</div>
  {% endfor %}

</div>


<!--Fim do Sobre a Escola-->


<div class="container">
	<h4 class="mt-5">Historial</h4>
	<div class="row">

                    <div class="col-sm-12 text-secondary">
                     <p class="text-justify">{{ historial.historial }}</p>
                    </div>
                  </div>

</div>
<!--Fim do Sobre o Historial-->


<div class="container">
	<h4 class="mt-5">Cursos Leccionados</h4>
  {% for curso in cursos%}
  <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#modalExemplo{{ curso.id }}">
{{ curso.nome }}
</button>


<!-- Modal -->
<div class="modal fade" id="modalExemplo{{ curso.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">{{ curso.nome }}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h5>Principais Disciplinas</h5>
        <p>{{ curso.principais_disciplinas }}</p>
        <h5>Perfil de Saída</h5>
        <p>{{ curso.perfil_de_saida }}</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
      </div>
    </div>
  </div>
 </div>
 {% endfor %}
<!--Fim Modal -->

</div>


<!--Fim de Cursos Leccionados-->


<div class="container">
	<h4 class="mt-5">Arquitectura</h4>


<div class="row">
  <div class="col-4">
    <div class="list-group" id="list-tab" role="tablist">
     {% for arquitectura in arquitecturas %}
   <a class="list-group-item list-group-item-action {% if loop.index == 1 %} active {% endif %}" id="list-{{ arquitectura.id}}-list" data-toggle="list" href="#list-{{ arquitectura.id }}" role="tab" aria-controls="{{ arquitectura.id }}">{{ arquitectura.arquitectura }}</a>
  {% endfor %}

    </div>
  </div>
  <div class="col-8">
    <div class="tab-content" id="nav-tabContent">
      {% for arquitectura in arquitecturas %}
      <div class="tab-pane fade {% if loop.index == 1 %} show  active {% endif %}" id="list-{{ arquitectura.id}}" role="tabpanel" aria-labelledby="list-{{ arquitectura.id }}-list">
      <div class="row row-cols-1 row-cols-md-2">
      {% for foto in arquitectura.fotos_escolas %}
  <div class="col mb-4">
    <div class="card h-100">
      <img src="{{asset('ficheiros/escolas/fotos')}}/{{foto.foto}}" class="card-img-top" alt="{{ arquitectura.descricao}}">

    </div>
  </div>
{% endfor %}
</div>
     </div>
     {% endfor %}
    </div>
  </div>
</div>
</div>
</section>
{% endblock %}

{% include './Site/includes/rodape.twig' %}

















