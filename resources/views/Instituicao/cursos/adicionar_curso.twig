{% extends "@include/main_painel.twig" %}

{% block conteudo %}

	<div class="card">
		<div class="card-body">
			<h2 class="mt-2">
				Adicionar Cursos
			</h2>
			{% if alert  %}
				<div class="alert alert-{{alert.getTipo()}} alert-dismissable fade show" role="alert"> {{ alert.getMensagem() }}
					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div> {{  alert.destruir() }}
			{% endif %}
			<hr>
			<form class="w-100" id="needs-validation" novalidate="" action="salvar_curso" method="POST" enctype="multipart/form-data"> {{ csrf_field() }}
				<div class="row">
					<div class="form-group col-md-6">
						<label for="rsNome">Nome
						</label>
						<input type="text" class="form-control {% if errors.first('nome') %} is-invalid {% endif %}" placeholder="Nome Curso" value="{{old('nome')}}" name="nome" id="rsNome">
                        {% if errors.first('nome') %}
                        <div class="invalid-feedback">
                            {{ errors.first('nome') }}
                        </div>
                        {% endif %}


						<input type="hidden" class="form-control" value="{{ usuario.id }}" name="id_instituicao" id="rsNome">
					</div>

					<div class="form-group col-md-6">
						<label for="rsPs">Perfil de saída
						</label>
						<input type="tel" class="form-control {% if errors.first('perfil_de_saida') %} is-invalid {% endif %}" placeholder="Perfil de saída" value="{{old('perfil_de_saida')}}" name="perfil_de_saida" id="rsPs">
                        {% if errors.first('perfil_de_saida') %}
                        <div class="invalid-feedback">
                            {{ errors.first('perfil_de_saida') }}
                        </div>
                        {% endif %}
					</div>
                    <div class="form-group col-md-6">
						<label for="rsPd">Principais disciplinas
						</label>
                        <textarea class="form-control {% if errors.first('principais_disciplinas') %} is-invalid {% endif %} " placeholder="Principais disciplinas"  name="principais_disciplinas" id="rsPd">{{old('principais_disciplinas')}}</textarea>
                        {% if errors.first('principais_disciplinas') %}
                        <div class="invalid-feedback">
                            {{ errors.first('principais_disciplinas') }}
                        </div>
                        {% endif %}
					</div>
				</div>
				<div class="d-flex align-items-end justify-content-end">
					<button type="submit" class="btn btn-success" value="Salvar">Salvar</button>
				</div>
			</form>
		</div>
	</div>


{% endblock %}
