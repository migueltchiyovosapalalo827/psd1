{% extends "@include/main_painel.twig" %}

    {% block conteudo %}

        <div class="card">
            <div class="card-body">
                <h2 class="mt-2">
                    Cursos Leccionados
                </h2>
                <hr>
                <div class="card">
                <div class="">
                    <table class="table tabela table-no-border table-responsive-xl table-hover   mb-0">
                        <thead class="bg-primary text-white">
                        <tr>
                            <th class="text-white">#</th>
                            <th class="text-white">CURSO</th>
                            <th class="text-white">PRINCIPAIS DISCIPLINAS</th>
                            <th class="text-white">PERFIL DE SAÍDA</th>
                            <th class="text-white">Opções</th>
                        </tr>
                        </thead>
                        <tbody class="  border-left-0">
                        {% for curso in cursos  %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ curso.nome }}</td>
                                <td>{{ curso.principais_disciplinas }}</td>
                                <td>{{ curso.perfil_de_saida }}</td>
                                <td>
                                    <div class="dropdown show ">
                                        <a class="btn btn-white btn-sm" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="material-icons md-18 align-middle">more_horiz</i>
                                        </a>

                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" >
                                                <form method="POST" action="editar_curso">
                                                 {{ csrf_field() }}

                                                <input type="hidden" value="{{ curso.id }}" name="id_curso">

                                                <button type="submit" style="border-color:#f1f3f04f;background:#f1f3f04f;color:#333" class="btn btn-success" value="Salvar">Editar </button>
                                                </form>
                                            </a>
                                            <a class="dropdown-item" href="eliminar_curso/{{ curso.id }}">
                                                <i class="material-icons md-14 align-middle">remove_circle</i>
                                                <span class="align-middle">Eliminar</span>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>


    {% endblock %}
