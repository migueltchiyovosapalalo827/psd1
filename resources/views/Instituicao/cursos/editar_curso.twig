{% extends "@include/main_painel.twig" %}

    {% block conteudo %}

        <div class="card">
            <div class="card-body">
                <h2 class="mt-2">
                    Editar curso de  {{ curso.nome }}
                </h2>
                 {% if alert  %}
					<div class="alert alert-{{alert.getTipo()}} alert-dismissable fade show" role="alert"> {{ alert.getMensagem() }}
						<button type="button" class="close" data-dismiss="alert" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div> {{  alert.destruir() }}
				{% endif %}
                <hr>
     <form class="w-100" id="needs-validation" novalidate=""  action="update_curso"  method="POST">
     {{ csrf_field() }}
                 	<div class="row">
                 		<div class="form-group col-md-6">
                            <label for="rsNome">Nome  </label>
                            <input type="text" class="form-control" placeholder="Nome Curso"   value="{{ curso.nome }}" name="nome" id="rsNome">
                            <input type="hidden" class="form-control" value="{{ curso.id }}" name="id" id="rsNome">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="rsPd">Principais disciplinas  </label>
                            <input type="text" class="form-control" placeholder="Principais Disciplinas"   value="{{ curso.principais_disciplinas }}" name="principais_disciplinas" id="rsPd">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="rsPs">Perfil de saída  </label>
                            <input type="tel" class="form-control" placeholder="Perfil de saída"   value="{{ curso.perfil_de_saida }}" name="perfil_de_saida" id="rsPs">
                        </div>
                 	</div>
                 	 <div class="d-flex align-items-end justify-content-end">
                        <button type="submit" class="btn btn-success" value="Salvar">Salvar</button>
                    </div>
                </form>
             </div>
    </div>


    {% endblock %}
