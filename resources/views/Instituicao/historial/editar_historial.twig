{% extends "@include/main_painel.twig" %}

{% block conteudo %}

	<div class="card">
		<div class="card-body">
			<h2 class="mt-2">
				Editar historial
			</h2>
				{% if alert  %}
				<div class="alert alert-{{alert.getTipo()}} alert-dismissable fade show" role="alert"> {{ alert.getMensagem() }}
					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div> {{  alert.destruir() }}
			{% endif %}
			<hr>
			<form class="w-100" id="needs-validation" novalidate="" action="{{route("instituicao.update_historial")}}" method="POST"> {{ csrf_field() }}
				<div class="row">
					<div class="form-group col-md-9">
						<label for="rsNome">Historial
						</label>
						<input type="hidden" class="form-control" value="{{ historial.id }}" name="id" id="rsNome">
                        <textarea name="historial" class="form-control  {% if errors.first('historial') %} is-invalid {% endif %}" placeholder="Breve descrição do historial da escola" cols="30" rows="10">{{ historial.historial }}</textarea>
                    {% if errors.first('historial') %}
                        <div class="invalid-feedback">
                            {{ errors.first('historial') }}
                        </div>
                    {% endif %}
					</div>

				</div>
				<div class="d-flex align-items-end justify-content-end">
					<button type="submit" class="btn btn-success" value="Salvar">Salvar</button>
				</div>
			</form>
		</div>
	</div>


{% endblock %}
