{% extends "@include/main_painel.twig" %}

{% block conteudo %}

	<div class="card">
		<div class="card-body">
			<h2 class="mt-2">
				Adicionar Historial
			</h2>
				{% if alert  %}
				<div class="alert alert-{{alert.getTipo()}} alert-dismissable fade show" role="alert"> {{ alert.getMensagem() }}
					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div> {{  alert.destruir() }}
			{% endif %}
			<hr>
			<form class="w-100" id="needs-validation" action="salvar_historial" method="POST"> {{ csrf_field() }}
				<div class="form-group col-md-8">
					<input type="hidden" value="{{ usuario.id }}" name="id_instituicao">
					<h5 for="idescricao">Historial</h5>
					<textarea name="historial" class="form-control  {% if errors.first('historial') %} is-invalid {% endif %}" placeholder="Breve descrição do historial da escola" rows="3">{{old('historial')}}</textarea>
                    {% if errors.first('historial') %}
                        <div class="invalid-feedback">
                            {{ errors.first('historial') }}
                        </div>
                    {% endif %}
				</div>
				<div class="d-flex align-items-end justify-content-end">
					<button type="submit" class="btn btn-success" value="Salvar">Salvar</button>
				</div>
			</form>
		</div>
	</div>


{% endblock %}
