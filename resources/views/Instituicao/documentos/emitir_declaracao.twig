{% extends "@include/main_painel.twig" %}

    {% block conteudo %}

        <div class="card">
            <div class="card-body">
                <h2 class="mt-2">
                   Emitir Declaração
                </h2>
                <hr>
    			<form  action="salvar_declaracao" enctype="multipart/form-data"  method="POST">
                {{ csrf_field() }}
					<h5 class="mt-4">Dados</h5>
								        	<div class="row">

								        	<div class="form-group col-md-4">
								        	<input type="text"  required="" name="curso" class="form-control"  placeholder="Informe o seu curso">
								        	<input type="hidden" name="id_estudante" class="form-control"  value="{{ usuario.id }}">
								        	</div>
								        	<div class="form-group col-md-4">
								        	<input type="text"  required="" name="turma" class="form-control"  placeholder="Informe a sua turma">

								        	</div>

								        	<div class="form-group col-md-4">
								        	  <select class="form-control" name="id_instituicao"  required="">
										      <option>Instituição..</option>
											  {% for instituicao in instituicoes  %}
										      <option value="{{ instituicao.id }}">{{ instituicao.nome}}</option>

										      {% endfor %}
										    </select>
											</div>
											<div class="form-group col-md-4">
                                            <input type="text"  required="" class="form-control" name="classe" class="form-control"  placeholder="Informe a classe">
								        	</div>
											<div class="form-group col-md-4">
								        	  <select class="form-control" name="tipo_declaracao"  required="">
										      <option>Tipo..</option>
										      <option value="Com notas">Com notas</option>
										      <option value="Sem notas">Sem notas</option>

										    </select>
								        	</div>
											<div class="form-group col-md-4">
								        	<input type="text"  required="" name="efeito" class="form-control"  placeholder="Para qual efeito?">

								        	</div>
								        	<div class="col-md-12"></div>
								            <div class="form-group col-md-6">
                                                <label> comprovativo de pagamento </labrl>
											  <input name="comprovativo" required="" class="form-control" type="file" id="formFile">
								        	</div>
								        	<div class="row col-md-12"></div>


								        	</div>
								        <button type="submit" class="btn btn-success">Enviar</button>
				</form>
        </div>
    </div>


    {% endblock %}
