{% extends "@include/main_painel.twig" %}

    {% block conteudo %}

        <div class="card">
            <div class="card-body">
                <h2 class="mt-2">
                   Emitir Certificado
                </h2>
                <hr>
    						<form  action="salvar_certificado" enctype="multipart/form-data"  method="POST">
								        {{ csrf_field() }}
                                           {% if alert  %}
                     <div class="alert alert-{{alert.getTipo()}} alert-dismissable fade show" role="alert">
                        {{ alert.getMensagem() }}
                          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    </div>
                   {{  alert.destruir() }}
{% endif %}
<h5 class="mt-4">Dados</h6>
<div class="row">
	<input type="hidden" name="id_estudante" value="{{ usuario.id }}">
	<div class="form-group col-md-6">
		<input type="text" name="instituicao" class="form-control" disabled="" value="{{ usuario.instituicao.nome}}">
	</div>
	<div class="form-group col-md-6">
		<select name="curso" class="form-control" required="">
			<option>cursos..</option>
			{% for curso in usuario.instituicao.cursos_escola %}
				<option value="{{ curso.nome }}"> {{curso.nome}}</option>
			{% endfor %}
		</select>
	</div>
	<div class="form-group col-md-4">
		<input type="text" name="turma" required="" class="form-control" placeholder="Informe a turma">

	</div>
	<div class="form-group col-md-4">
		<input type="text" name="numero_estudantil" required="" class="form-control" placeholder="Número Estudantil">
	</div>
	<div class="form-group col-md-4">
		<input type="text" name="ano_termino" class="form-control" required="" placeholder="Ano do término">
	</div>
	<div class="col-md-12"></div>
	<div class="form-group col-md-6">
		<label>
			comprovativo de pagamento
		</labrl>
		<input name="comprovativo" required="" class="form-control" type="file" id="formFile">
	</div>
	<div class="row col-md-12 mb-4"></div>
</div>
<button type="submit" class="btn btn-success">Enviar</button></form>

        </div>
    </div>


    {% endblock %}
