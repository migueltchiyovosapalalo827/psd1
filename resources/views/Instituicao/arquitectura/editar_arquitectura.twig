{% extends "@include/main_painel.twig" %}

    {% block conteudo %}

        <div class="card">
            <div class="card-body">
                <h2 class="mt-2">
                    Editar Arquitectura
                </h2>
                <hr>
     <form class="w-100" id="needs-validation" novalidate=""  action="update_arquitectura"  method="POST">
            {{ csrf_field() }}
                 	<div class="row">
                 		<div class="form-group col-md-9">
                            <label for="rsNome">Historial </label>
                            <input type="text" class="form-control"    value="{{ arquitectura.arquitectura }}" name="arquitectura" id="rsNome">
                            <input type="hidden" class="form-control" value="{{ arquitectura.id }}" name="id" id="rsNome">
                        </div>

                 	</div>
                 	 <div class="d-flex align-items-end justify-content-end">
                        <button type="submit" class="btn btn-success" value="Salvar">Salvar</button>
                    </div>
                </form>
             </div>
    </div>

    {% endblock %}
