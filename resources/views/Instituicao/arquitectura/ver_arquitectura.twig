{% extends '@include/main_painel.twig' %}

{% block conteudo %}
  <div class="card">
    <div class="card-body">
      <h2 class="mt-2">Arquitectura</h2>
      {% if alert %}
        <div class="alert alert-{{ alert.getTipo() }} alert-dismissable fade show" role="alert">
          {{ alert.getMensagem() }}
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
        {{ alert.destruir() }}
      {% endif %}
      <hr />
      <div class="card">
        <div class="">
          <table class="table tabela table-no-border table-responsive-xl table-hover mb-0">
            <thead class="bg-primary text-white">
              <tr>
                <th class="text-white">#</th>
                <th class="text-white">ARQUITECTURAS</th>
                <th class="text-white text-center">Opções</th>
              </tr>
            </thead>
            <tbody class="border-left-0">
              {% for arquitectura in arquitecturas %}
                <tr>
                  <td>{{ loop.index }}</td>
                  <td>{{ arquitectura.arquitectura }}</td>
                  <td class="text-center">
                    <div class="dropdown show">
                      <a class="btn btn-white btn-sm" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="material-icons md-18 align-middle">more_horiz</i></a>

                      <div class="dropdown-menu">
                      <a class="dropdown-item" href="/instituicao/ver_fotos/{{ arquitectura.id }}">
                              <span class="align-middle">ver fotos</span>
                            </a>
                        <a class="dropdown-item">
                          <form method="POST" action="editar_arquitectura">
                            {{ csrf_field() }}
                            <input type="hidden" value="{{ arquitectura.id }}" name="id_arquitectura" />
                            <button type="submit" style="border-color:#f1f3f04f;background:#f1f3f04f;color:#333" class="btn btn-success" value="Salvar">Editar</button>
                          </form>
                        </a>
                        <a class="dropdown-item" href="/instituicao/eliminar_arquitectura/{{ arquitectura.id }}">
                          <i class="material-icons md-14 align-middle">remove_circle</i>
                          <span class="align-middle">Eliminar</span>
                        </a>
                      </div>
                    </div>
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
