<script type="text/javascript" src="/public/js/pnotify/PNotify.js"></script>
{% if alert.tipo == 'sucesso' %}
    <script charset="${_response_encoding}">
        PNotify.success({
            title: "{{ alert.getTitulo() }}",
            text: "{{ alert.getMensagem() }}",
            type: "success",
            styling: 'bootstrap3',
            icons: 'fontawesome4',
            delay: 2000,
            destroy: true,
            remove: true,
            textTrusted: true,
        });
        {{ alert.destruir() }}
    </script>
{% endif %}
